# ==============================================================================
# Development Environment Variables
# ==============================================================================

# Rails
RAILS_ENV=development
RACK_ENV=development
SECRET_KEY_BASE=development_secret_key_base_not_for_production

# Database
DB_HOST=mariadb
DB_NAME=short_development
DB_USERNAME=root
DB_PASSWORD=password
DATABASE_URL=mysql2://root:password@mariadb:3306/short_development

# Redis
REDIS_URL=redis://redis:6379/0

# Sidekiq
SIDEKIQ_CONCURRENCY=5
SIDEKIQ_USERNAME=admin
SIDEKIQ_PASSWORD=admin

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_SERVICE_NAME=short-app
OTEL_TRACES_EXPORTER=otlp

# Prometheus
PROMETHEUS_EXPORTER_HOST=0.0.0.0

# CORS (comma-separated origins for production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com